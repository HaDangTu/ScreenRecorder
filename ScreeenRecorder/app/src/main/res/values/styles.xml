<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name = "NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="Button">
        <item name="android:background">@drawable/notification_button_background</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    </style>

    <style name="ButtonNotification" parent="Button">
        <item name="android:drawableTint">@color/colorBackgroundIcon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ButtonSettings" parent="Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="ButtonSettingsSwitch" parent="ButtonSettings">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ButtonVisible" >
        <item name="android:tint">@color/colorBackground</item>
        <item name="android:background">@drawable/button_visible_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonControlBar">
        <item name="android:background">@drawable/control_bar_button_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Avatar">
        <item name="android:src">@mipmap/ic_launcher_app_round</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/colorSeparator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorBackgroundIcon</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
