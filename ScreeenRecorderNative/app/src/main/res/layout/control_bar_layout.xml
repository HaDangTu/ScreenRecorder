<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/ctrl_bar_bt_settings"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:src="@drawable/ic_action_settings"
        android:tint="@color/colorDescriptionButton"
        style="@style/ButtonControlBar"/>

    <ImageButton
        android:id="@+id/ctrl_bar_bt_record"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:src="@drawable/ic_action_video"
        style="@style/ButtonControlBar"/>

    <ImageButton
        android:id="@+id/ctrl_bar_bt_screenshot"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:src="@drawable/ic_action_screen_shot"
        android:tint="@color/colorOrangeMaterial"
        style="@style/ButtonControlBar"/>

    <ImageButton
        android:id="@+id/ctrl_bar_bt_exit"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:src="@drawable/ic_action_close"
        android:tint="@color/colorBackgroundIcon"
        style="@style/ButtonControlBar"/>
</LinearLayout>